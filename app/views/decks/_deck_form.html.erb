<div class="col-md-4 col-md-offset-4 col-xs-8 col-xs-offset-2">
	<%= form_for(@deck) do |f| %>
		<%= render 'shared/error_messages', object: f.object %>
		<div class ='field'>
			<%= f.text_field :title, placeholder: "Name the Deck..." %>
		</div>
		<div><%= f.submit button_label, class: "btn btn-primary" %></div>
	<% end %>	
</div>