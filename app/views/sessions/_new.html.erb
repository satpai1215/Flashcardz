<h2>Please Log In: </h2>
<div class="row">
	<div class="span6 offset3">
		<%= form_tag sessions_path do %>
			<%= label_tag :email %>
			<%= text_field_tag :email, params[:email] %>

			<%= label_tag :password %>
			<%= password_field_tag :password %>

			<div><%= submit_tag "Sign In", class: "btn btn-primary" %></div>
		<% end %>
	</div>
</div>

