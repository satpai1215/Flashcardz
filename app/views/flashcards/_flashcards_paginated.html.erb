<div class="row">
	<%= link_to "Edit Card", edit_deck_flashcard_path(@deck, @flashcard.id, page: params[:page]) %> |
	<%= link_to "Delete Card", deck_flashcard_path(@deck, @flashcard.id), method: :delete, data: {confirm: "You sure?"} %>
</div>

<div class="row">
	<div class ="flashcard-nav btn-group">
	
	</div>
</div>

<div class="row">
	<div class="flashcard-container span8 offset2 col-xs-10">
		<%= will_paginate @flashcards %>
		<% @flashcards.each do |card| %>
			<div class="card">
				<div class="card-front"><span><%= card.side_one %></span></div>
				<div class="card-back"><span><%= card.side_two %></span></div>
			</div>
		<% end %>
	</div>
</div>
<%= javascript_tag do %>
	$(function() {
		$('.card').on('click', function(e) {
			$(this).toggleClass('flipped');
		});
	});

<% end %>